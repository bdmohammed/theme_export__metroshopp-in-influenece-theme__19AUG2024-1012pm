{%- liquid
  assign se_stts = section.settings
  assign se_blocks = section.blocks 
  assign admin_sp = request.design_mode
  assign h__bgimg = se_stts.h__bgimg
  assign h_transparent = se_stts.transparent_header
  if request.page_type != 'index' 
    assign h_transparent = false 
  endif
  assign space_transparent = se_stts.space_transparent_header 
  assign source = se_stts.source -%}

<div data-header-options='{ "isTransparent": {{h_transparent}},"isSticky": {{se_stts.sticky_header}},"hideScroldown": {{se_stts.scroll_header}} }' class="header__wrapper layout-layout_{{se_stts.layout}} {% if h__bgimg != blank %} lazyload header__bgimg" data-bgset="{{ h__bgimg | asset_url | image_url: '1x1' }}" data-ratio="{{h__bgimg.aspect_ratio}}" data-sizes="auto"{% else %}"{% endif %}>
  <div class="container">
    <div data-header-height class="row ts-gx-15 ts-gx-md-30 align-items-center">
    {%- case se_stts.layout -%}

      {%- when 'menu_left' -%}
        <div class="col-3 col-item">{%- render 'push_menu' -%}</div>
        <div class="col-6 text-center col-item">{%- render 'logo', tag:'div', isTransparent:se_stts.transparent_header -%}</div>
        <div class="col-3 text-end col-group_btns col-item lh-1">{%- render 'group_btns',se_stts:se_stts -%}</div>
    
      {%- when 'menu_right' -%}
        <div class="d-lg-none col-3 col-item">{%- render 'push_menu' -%}</div>
        <div class="d-none d-lg-block col-3 col__textSocial col-item">
            {%- if source == '1' -%}{{- se_stts.txt -}}
            {%- elsif source == '2' or source == '3' -%}
              {%- if source == '3' %}{% assign follow_social = true %}{% endif -%}
              {%- render 'social_sharing',style:1,use_color_set:false,size:'small',space_h_item:15,space_h_item_mb:10,space_v_item:0,space_v_item_mb:0,share_permalink:shop.url,share_title:shop.name,share_image:share_image,follow_social:follow_social -%}
            {%- endif -%}
        </div>
        <div class="col-6 text-center col-item">{%- render 'logo', tag:'div', isTransparent:se_stts.transparent_header -%}</div>
        <div class="col-3 text-end col-group_btns col-item lh-1">{%- render 'group_btns',se_stts:se_stts,isShowMenuBtn:true -%}</div>

      {%- else -%}
        
        <div class="col-lg-auto col-md-4 col-3 col-item">{%- render 'push_menu' -%}</div>
        <div class="col-lg col-md-4 col-6 text-center text-lg-start col-item">{%- render 'logo', tag:'div', isTransparent:se_stts.transparent_header -%}</div>
        <div data-predictive-search data-sid="search-hidden" class="search-header__form-wrap text-center d-none d-lg-block col-6 col-item">
          {%- style -%}
            .search-header__form {
                padding: 0;
                border: 1px solid rgba(var(--h-text-color-rgb), 0.15);
                border-radius: 40px;
                padding: 2px;
                max-width: {{se_stts.frm_sea_mw}}px;
                margin: 0;    
                display: inline-flex;width: 100%;
            }
            .search-header__input {
                background-color: transparent;
                padding: 0 15px;
                height: 40px;
                border: 0;
                width: 100%;
                line-height: 18px;
                color: var(--h-text-color);
                border-radius: 30px;
                    font-size: 13px;
            }

            {%- assign clsea_lightness  = se_stts.clsea | color_extract: 'lightness' -%}
            .search-header__submit {
                --h-btn-color : {% if clsea_lightness < 85 %}#fff{% else %}#222{% endif %};
                --h-btn-bg-color : {{se_stts.clsea}};
                --h-btn-bg-color-hover : {{se_stts.clsea | color_darken: 15}};
                margin: 0;
                min-width: 130px;
                font-weight: 600;
                border-radius: 40px;
                background-color: var(--h-btn-bg-color);
                color: var(--h-btn-color);
                font-size: 14px;
                transition: color .25s ease, background-color .25s ease, border-color .25s ease, box-shadow .25s ease, opacity .25s ease;
            }
            {%- if h_transparent -%}
            {%- assign clsea_lightness  = se_stts.clseatr | color_extract: 'lightness' -%}
            .search-header__submit {
                --h-btn-color : {% if clsea_lightness < 85 %}#fff{% else %}#222{% endif %};
                --h-btn-bg-color : {{se_stts.clseatr}};
                --h-btn-bg-color-hover : {{se_stts.clseatr | color_darken: 15}};
            }
            {%- endif -%}

            {%- assign clsea_lightness  = se_stts.clseast | color_extract: 'lightness' -%}
            .is-header--stuck .search-header__submit {
                --h-btn-color : {% if clsea_lightness < 85 %}#fff{% else %}#222{% endif %};
                --h-btn-bg-color : {{se_stts.clseast}};
                --h-btn-bg-color-hover : {{se_stts.clseast | color_darken: 15}};
            }
            .search-header__submit:hover {
               background-color: var(--h-btn-bg-color-hover);
               color: var(--h-btn-color);
            }
            .site-nav__icons .search-header__submit svg.icon {
                  color: rgba(var(--h-text-color-rgb), 0.15);
                  width: 15px;
                  height: 15px;
            }
            .search-header__type select {
                border: 0;
                max-width: 100%;
                padding: 0 30px 0 15px;
                -webkit-appearance: none;
                -moz-appearance: none;
                appearance: none;
                font-size: 14px;
                display: inline-block;
                background-color: transparent;
                box-shadow: none;
                color: var(--h-text-color);
                border-radius: 30px;
                background-image: none;
                line-height: 40px;
            }
            .search-header__type .icon-select-arrow { color: rgba(var(--h-text-color-rgb), 1); }
            .search-header_border {
                height: 18px;
                background-color: rgba(var(--h-text-color-rgb), 0.15);
                width: 1.5px;
            }
            .section-header:not(.calc-pos-submenu) {
                overflow: visible !important;
            }
              .frm-search__results {
                    position: absolute;
                    top: 100%;
                    right: 0;
                    left: 0;
                    z-index: 1000;
                    width: auto;
                    height: auto;
                    background-color: var(--light-color);
                    margin-top: 5px;
                    opacity: 0;
                    visibility: hidden;
                    pointer-events: none;
                    transition: all .1s ease-in-out;
                    max-width: 600px;
                    margin: 0 auto;
                    box-shadow: 0 1px 5px 2px rgba(var(--border-color-rgb),.3);
              }
              .search-header__form-wrap:hover .frm-search__results {
                  opacity: 1;
                  visibility: visible;
                  pointer-events: auto;
              }
              .frm-search__content { 
                height:auto;
                overflow: auto;
                overflow-x: hidden;
                -webkit-overflow-scrolling: touch;
                padding: 20px;
              }
              .frm-search__content .widget_img_pr {
                  min-width: 95px;
                  max-width: 95px;
                  max-height: 120px;
              }
              .frm-search__content .widget_img_pr>a {
                height: 100%;
              }
              .frm-search__content .widget_img_pr img {
                object-fit: contain;
                max-height: 120px;
              }
              .frm-search__content .row.widget__pr {
                  --ts-gutter-x: 20px;flex-wrap: nowrap;
              }
              .frm-search__content .widget__pr .widget__pr-title {
                  font-weight: 500;
                  line-height: 1.25;
                  font-size: 14px;
                  color: var(--secondary-color);
              }
              .frm-search__content .widget__pr-price {
                font-size: 14px;
                color: var(--secondary-price-color);
              }
              .frm-search__content .widget__pr-price ins {
                  color: var(--primary-price-color);
                  margin-left: 5px;
              }
              .frm-search__content .widget__pr .widget__pr-price {
                  margin-top: 1.5px;
              }
              .search-header__form-wrap .mini-search__viewAll {
                    padding: 12px 20px;
                    border-top: 1px solid rgba(var(--border-color-rgb),.35);
                    box-shadow: 0 0 10px 0 rgba(var(--border-color-rgb),.35);
             }
             .frm-search__content .widget__pr .widget__pr-title:hover,
             .search-header__form-wrap .mini-search__viewAll:hover {
                    color: var(--accent-color);
             }
          {%- endstyle -%}
          {%- assign limit = 5 -%}
          
            {%- liquid
             assign collection = collections[settings.search_prs_suggest]
             assign limit = 5 
             assign show_search_suggest = settings.show_search_suggest -%}
            <form data-frm-search action="{{ routes.search_url }}" method="get" class="search-header__form row ts-g-0 align-items-center" role="search">
              <input type="hidden" name="type" value="product">
              <input type="hidden" name="options[unavailable_products]" value="{{settings.unavailable_prs}}">
              <input type="hidden" name="options[prefix]" value="last">
              {%- if settings.filter_type_search and shop.types.size > 0  -%}
              <div data-cat-search class="search-header__type relative overflow-hidden col-auto col-item">
                 <select data-name="product_type" class="truncate">
                   <option value="*">{{ 'search.general.all_categories' | t }}</option>
                   {%- for product_type in shop.types -%}{%- if product_type == blank %}{% continue-%}{% endif -%}<option value="{{product_type}}"{% if search_pr_type == product_type %} selected="selected"{% endif %}>{{product_type}}</option>{%- endfor -%}
                 </select>
                 <svg class="icon-select-arrow pointer-events-none" role="presentation" width="10" height="10" viewBox="0 0 19 12"><use href="#select-arrow"></use></svg>
              </div>
              <div class="search-header_border col-auto col-item"></div>
             {%- endif -%}
              <div class="search-header__main relative overflow-hidden d-flex col col-item">
                <input data-input-search class="search-header__input input__currentcolor" autocomplete="off" type="text" name="q" placeholder="{{ 'search.general.placeholder_products' | t }}">
                <button class="search-header__submit{% if settings.ajax_search %} pointer-events-none{% endif %}" type="submit">{{ 'search.general.submit' | t }}</button>
              </div>
            </form>
            <div class="relative text-start">
                 <div class="absolute frm-search__results">
                    <div data-skeleton-search class="skeleton_wrap dn">
                       {%- for i in (1..4) -%}
                       <div class="row space-item-inner">
                          <div class="col-auto col-item widget_img_pr"><div class="skeleton_img"></div></div>
                          <div class="col col-item widget_if_pr"><div class="skeleton_txt1"></div><div class="skeleton_txt2"></div></div>
                       </div>
                       {%- endfor -%}
                    </div>
                    <div data-results-search class="frm-search__content ratioadapt current-scrollbar"{% if collection == blank or show_search_suggest == false %} style="display: none;"{% endif%}>
                      {%- if collection != blank and show_search_suggest -%}
                            {%- for product in collection.products limit:limit -%}
                            {%- render 'pr-sidebar-loop',imgatt:"",product:product,pr_url:product.url,placeholder_img:placeholder_img,price_varies_style:price_varies_style -%}
                            {%- endfor -%}
                        {%- endif -%}
                    </div>
                    {%- if collection != blank and show_search_suggest -%}
                       {%- if collection.all_products_count > limit -%}
                          <div data-viewAll-search>
                             <a href="{{collection.url}}" class="mini-search__viewAll d-block">{{ 'search.pagination.view_all' | t }} <svg width="16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32"><path d="M 18.71875 6.78125 L 17.28125 8.21875 L 24.0625 15 L 4 15 L 4 17 L 24.0625 17 L 17.28125 23.78125 L 18.71875 25.21875 L 27.21875 16.71875 L 27.90625 16 L 27.21875 15.28125 Z"/></svg></a>
                          </div>
                       {%- endif -%}
                    {%- else -%}<div data-viewAll-search></div>
                    {%- endif -%}
                 </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-3 text-end col-group_btns col-item lh-1">{%- render 'group_btns',se_stts:se_stts -%}</div>

    {%- endcase -%}
    </div>
  </div>
</div>

{%- style -%}
  {%- assign opnav  = se_stts.opnav | divided_by: 100.0 -%}
  .header__wrapper {
    --h-text-color      : {{se_stts.clnav}};
    --h-text-color-rgb  : {{ se_stts.clnav | color_to_rgb | remove:'rgb(' |remove:')' }};
    --h-text-color-hover: {{se_stts.clnav_hover}};
    --h-bg-color        : {{ se_stts.bgnav | color_modify: 'alpha', opnav }};
    background-color: var(--h-bg-color);
  }
  .count-box {
    --h-count-bgcolor: {{se_stts.bg_hc}};
    --h-count-color: {{se_stts.cl_hc}};
  }

  {%- if h__bgimg != blank %}
  .header__bgimg {
      background-size: cover;
      background-repeat: no-repeat;
  }
  {%- endif -%}

  {%- if h_transparent -%}

    .section-header,#shopify-section-top-bar { --h-space-tr: {% if space_transparent %}30px{% else %}0px{% endif %} }

    {%- assign opnavtr  = se_stts.opnavtr | divided_by: 100.0 -%}
    .header__wrapper {
      --h-text-color      : {{se_stts.clnavtr}};
      --h-text-color-rgb  : {{ se_stts.clnavtr | color_to_rgb | remove:'rgb(' |remove:')' }};
      --h-text-color-hover: {{se_stts.clnavtr_hover}};
      --h-bg-color        : {{ se_stts.bgnavtr | color_modify: 'alpha', opnavtr }};
    }
    .section-header {
        margin-top: var(--h-space-tr);
        margin-bottom: calc(-1 * (var(--header-height) + var(--h-space-tr)));
    }

    {%- if space_transparent -%}
      .is--topbar-transparent.is--header-transparent #shopify-section-top-bar {
        margin-top: var(--h-space-tr);
      }
      #hsticky__sentinel {
        bottom:calc(-1 * var(--h-space-tr));
      }
    {%- endif -%}

  {%- endif -%}

  {%- if se_stts.sticky_header -%}
    .p-sticky .section-header {
      position: sticky;
      top: 0;
      z-index: 194;
    }
    {%- assign opnavst  = se_stts.opnavst | divided_by: 100.0 -%}
    .is-header--stuck .header__wrapper {
      --h-text-color      : {{se_stts.clnavst}};
      --h-text-color-rgb  : {{ se_stts.clnavst | color_to_rgb | remove:'rgb(' |remove:')' }};
      --h-text-color-hover: {{se_stts.clnavst_hover}};
      --h-bg-color        : {{ se_stts.bgnavst | color_modify: 'alpha', opnavst }};
    }
    .is-header--stuck .header__sticky-logo {
      display:block !important
    }
    .is-header--stuck .header__normal-logo,
    .is-header--stuck .header__mobile-logo {
      display:none !important
    }
  {%- endif -%}
 
  .section-header [data-header-height] {
      min-height: {{se_stts.height}}px;    
  }
  .header__logo img {
    padding-top: 5px;
    padding-bottom: 5px;
    transform: translateZ(0);
    max-height: inherit;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    perspective: 800px;
    height: auto;
    width: 100%;
    max-width: 100%;
  }
  .header__logo img[src*=".svg"] {
    height: 100%;
  }
  .site-nav__icons .site-nav__icon {
      padding: 0 6px;
      display: inline-block;
      line-height: 1;
  }
  .site-nav__icons svg.icon {
      color: var(--h-text-color);
      line-height: 1;
      vertical-align: middle;
      transition: color 0.2s ease-in-out;
      width: 22px;
      height: 22px;
  }
  .site-nav__icons.use__kalles svg.icon--account {
      width: 24px;
      height: 24px;
  }
  .site-nav__icons.use__line svg.icon {
    width: 25px;
    height: 25px;
  }
  .site-nav__icon>a:hover svg.icon {
      color: var(--h-text-color-hover);
  }
  .site-nav__icon a { 
    display: inline-block;
    line-height: 1;
  }
  .site-nav__cart >a,.push-menu-btn,.col__textSocial,.col__textSocial a {color: var(--h-text-color)}
  .site-nav__cart >a:hover,.col__textSocial a:hover {color: var(--h-text-color-hover)}
  @media (min-width: 768px) {
    .site-nav__icons .site-nav__icon {
        padding: 0 8px;
    }
  }
  @media (min-width: 1025px) {
      {%- if se_stts.full_header -%}
      .announcement-bar >.container, .top-bar >.container, .header__wrapper >.container {
          max-width: 100%;
      }
      {%- else -%}
         {%- if space_transparent and h_transparent -%}
          .is--topbar-transparent.is--header-transparent #shopify-section-top-bar,
          html:not(.is-header--stuck) .section-header {
            max-width: 1170px;
            margin-right: auto;
            margin-left: auto;
          }
        {%- endif -%}
        .header__wrapper>.container {
          padding-right: 20px;
          padding-left: 20px;
        }
      {%- endif -%}
    .site-nav__btnMenu svg {
        transform: rotate(180deg);
    }
    .col__textSocial p { margin-bottom: 0; }
    .layout-layout_logo_search .site-nav__icon.site-nav__search {
      display:none
    }
  }
{%- endstyle -%}

{%- if h_transparent -%}
<script>
document.documentElement.classList.add('is--header-transparent');
document.documentElement.style.setProperty('--header-height', document.getElementById('shopify-section-{{section.id}}').offsetHeight + 'px');
</script>
{%- endif -%}

