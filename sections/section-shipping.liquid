<!-- sections/shipping.liquid -->
{% comment %} 
      Section: Shipping Features
     
      This section displays shipping features, support information, and other service benefits
      in a responsive grid/carousel layout.
     
      Customization options: 
      - Add/remove feature blocks 
      - Customize icons, titles, and descriptions 
      - Control colors, spacing, and typography 
      - Configure responsive behavior 
{% endcomment %}

<link
  href="{{ 'section.css' | asset_url }}"
  rel="stylesheet"
  type="text/css"
  media="all">
<link
  href="{{ 'shipping.css' | asset_url }}"
  rel="stylesheet"
  type="text/css"
  media="all">
<link
  href="{{ 'slider-settings.css' | asset_url }}"
  rel="stylesheet"
  type="text/css"
  media="all">
<link
  href="{{ 'pre_flickity.css' | asset_url }}"
  rel="stylesheet"
  type="text/css"
  media="all">
<link
  href="{{ 'animation.css' | asset_url }}"
  rel="stylesheet"
  media="print"
  onload="this.media='all'">
<div
  class="container-wrap section-inner {{ section.class}}"
  id="{{ section.id }}"
  style="
    --bg-color: {{ section.settings.bg_color }};
    --bg-gradient: {{ section.settings.bg_gradient }};
    --border-cl: {{ section.settings.border_color }};
    --mg-top: {{ section.settings.margin_top }}px;
    --mg-right: {{ section.settings.margin_right }}px;
    --mg-bottom: {{ section.settings.margin_bottom }}px;
    --mg-left: {{ section.settings.margin_left }}px;
    --pd-top: {{ section.settings.padding_top }}px;
    --pd-right: {{ section.settings.padding_right }}px;
    --pd-bottom: {{ section.settings.padding_bottom }}px;
    --pd-left: {{ section.settings.padding_left }}px;
    --mgtb-top: {{ section.settings.margin_tablet_top }}px;
    --mgtb-right: {{ section.settings.margin_tablet_right }}px;
    --mgtb-bottom: {{ section.settings.margin_tablet_bottom }}px;
    --mgtb-left: {{ section.settings.margin_tablet_left }}px;
    --pdtb-top: {{ section.settings.padding_tablet_top }}px;
    --pdtb-right: {{ section.settings.padding_tablet_right }}px;
    --pdtb-bottom: {{ section.settings.padding_tablet_bottom }}px;
    --pdtb-left: {{ section.settings.padding_tablet_left }}px;
    --mgmb-top: {{ section.settings.margin_mobile_top }}px;
    --mgmb-right: {{ section.settings.margin_mobile_right }}px;
    --mgmb-bottom: {{ section.settings.margin_mobile_bottom }}px;
    --mgmb-left: {{ section.settings.margin_mobile_left }}px;
    --pdmb-top: {{ section.settings.padding_mobile_top }}px;
    --pdmb-right: {{ section.settings.padding_mobile_right }}px;
    --pdmb-bottom: {{ section.settings.padding_mobile_bottom }}px;
    --pdmb-left: {{ section.settings.padding_mobile_left }}px;
  ">
  <div class="container">
    <div
      class="shipping-list {% if section.settings.enable_carousel_mobile %}carousel-disable-md{% endif %} flicky-slider flickity dots-style-{{ section.settings.dots_style }} dots-cl-{{ section.settings.dots_color }} dots-round-{{ section.settings.dots_round }}  shipping-padding-1 shipping-icon-{{ section.settings.icon_size }} text-{{ section.settings.text_alignment }} ver-center-{{ section.settings.vertical_center }} use_border_{{ section.settings.use_border }} row row-cols-lg-{{ section.settings.columns_desktop }} row-cols-md-{{ section.settings.columns_tablet }} row-cols-1 ts-gx-md-{{ section.settings.vertical_gap_desktop }} ts-gy-md-{{ section.settings.horizontal_gap_desktop }} ts-gx-{{ section.settings.vertical_gap_mobile }} ts-gy-{{ section.settings.horizontal_gap_mobile }}"
      style="
        --icon-cl: {{ section.settings.icon_color }};
        --icon-cl2: {{ section.settings.icon_color2 }};
        --bd-cl: {{ section.settings.border_color }};
        --bg-cl: {{ section.settings.bg_color }};
        --title-cl: {{ section.settings.title_color }};
        --content-cl: {{ section.settings.content_color }};
        --hd-fs: {{ section.settings.title_font_size }}px;
        --txt-fs: {{ section.settings.content_font_size }}px;
        --hd-fw: {{ section.settings.content_font_weight }};
      "
      data-flickity-js='
        {
          "watchCSS": 1,
          "setPrevNextButtons": false,
          "arrowIcon":"1",
          "imagesLoaded": 0,
          "adaptiveHeight": 0,
          "contain": 1,
          "groupCells": "100%",
          "dragThreshold" : 5,
          "cellAlign": "left",
          "wrapAround": {{ section.settings.enable_wrap_around | json }},
          "prevNextButtons": {{ section.settings.show_navigation | json }},
          "percentPosition": 1,
          "pageDots": {{ section.settings.show_dots | json }},
          "autoPlay" : {{ section.settings.autoplay | json }},
          "pauseAutoPlayOnHover" : true
        }
      '>
      {% if section.settings.heading != blank %}
        <div class="section-header text-{{ section.settings.text_align }}">
          <h2 class="section-title">{{ section.settings.heading }}</h2>
        </div>
      {% endif %}
      {% for block in section.blocks %}
        <div class="shipping shipping-item col-item" {{ block.shopify_attributes }}>
          <div
            class="shipping-inner"
            {% if section.settings.enable_animation %}
            timeline
            hdt-reveal="slide-in"
            {% endif %}>
            <div class="col-auto shipping-icon shipping-icon-themes">
              {{ block.settings.icon_svg }}
            </div>
            <div class="col shipping-content">
              <h3 class="shipping-title">{{ block.settings.title }}</h3>
              <div class="shipping-des rte--list">
                {{ block.settings.content }}
              </div>
              {% if block.settings.additional_content != blank %}
                <div class="shipping-des rte--list">{{ block.settings.additional_content }}</div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

