  "name": "Login sidebar",
  "tag": "section",
  "class": "section line-section",
  "settings": [
    {
      "type": "header",
      "content": "+ General options"
    },
    {
      "type": "select",
      "id": "content_align",
      "label": "Content align",
      "default": "start",
      "options": [
        {
          "value": "start",
          "label": "Default"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ]
    },
    {
      "type": "header",
      "content": "+ Button options"
    },
    {
      "type": "select",
      "id": "btn_width",
      "label": "Button width",
      "default": "full",
      "options": [
        {
          "value": "default",
