        }
      ]
    },
    {
      "type": "select",
      "id": "btns_size",
      "label": "Button size",
      "default": "medium",
      "options": [
        {
          "label": "Small",
          "value": "small"
        },
        {
          "label": "Extra small",
          "value": "extra-small"
        },
        {
          "label": "Medium",
          "value": "medium"
        },
        {
          "label": "Extra medium",
