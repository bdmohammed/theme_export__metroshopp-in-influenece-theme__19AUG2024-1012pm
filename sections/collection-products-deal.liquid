                     <div class="sold-bar" style="width: {{sold}}%"></div>
                  </div>
                  <div class="pr-stock-status">
                    <div class="sold"> <span class="label">{{txt_sold}} </span> <span class="value">{{bk_stts.total | minus: bk_stts.available}}<span></span></span></div>
