      {%- else -%}
        {%- for i in (1..8) limit:se_stts.pr_limit -%}
          <div class="col-item pr-item pr-des-{{se_stts.product_des}} pr-{{se_stts.content_align}}">
            <div class="product-wrapper">
              <div class="product-inner">
                <a class="db" href="/admin/products">{%- capture current -%}  {%- cycle 1, 2, 3, 4, 5, 6 -%}  {%- endcapture -%} {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}</a>
