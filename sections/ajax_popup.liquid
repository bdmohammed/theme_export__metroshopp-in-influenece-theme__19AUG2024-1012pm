[splitlz]
{%- if request.page_type == 'product' -%}
  <style>
    #pr-popup__contact h3 {
      margin-bottom: 20px;
      font-size: 23px;
    }
    #pr-popup__contact form > p {
      margin-bottom: 18px;
    }
    #pr-popup__contact form > p > input {
      width: 100%;
      height: 40px;
      line-height: 18px;
    }
    #pr-popup__contact form > p > textarea {
      width: 100%;
      overflow: auto;
      padding: 10px 15px;
      min-height: 190px;
      line-height: 18px;
    }
    #pr-popup__contact {
      padding: 0;
    }
    #pr-popup__contact form {
      padding: 22px 30px;
    }
    .product-Ask {
      padding: 22px 30px;
      background-color: #f5f5f5;
      display: flex;
      flex-wrap: nowrap;
      align-items: center;
    }
    .product-Ask__img {
      width: 80px;
      height: 80px;
      min-width: 80px;
      border-radius: 50%;
      overflow: hidden;
      display: block;
      position: relative;
      margin-right: 20px;
    }
    .product-Ask__img img {
      position: absolute;
      left: 0;
      right: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }
    .product-Ask__title {
      color: var(--secondary-color);
      font-weight: 500;
    }
    .product-Ask__price {
      color: var(--secondary-price-color);
    }
    .product-Ask__price ins {
      color: var(--primary-price-color);
    }
    #pr-popup__contact input.button {
      background-color: var(--accent-color);
      color: var(--ts-light-color);
      border-radius: 40px;
    }
    #pr-popup__contact input.button:hover {
      background-color: var(--accent-color-darken);
    }
  </style>
  {%- assign formId = 'ContactFormAsk' | append: product.id -%}
  {%- assign image = product.featured_image -%}

  <div class="product-Ask">
    {%- if image != blank -%}
      <div class="product-Ask__img">
        <img
          class="lazyload lz--fadeIn"
          data-src="{{ image | image_url: '1x1' }}"
          data-widths="[80,120,160,200]"
          data-optimumx="1.2"
          data-sizes="auto"
          src="{% render 'img_svg',w:image.width,h:image.height %}"
          width="{{ image.width }}"
          height="{{ image.height }}"
          alt="{{ image.alt | escape }}"
        >
        <span class="lazyload-loader is-bg-img" style="background: url({{ image | image_url: '1x1' }})"></span>
      </div>
    {%- endif -%}
    <div class="product-Ask__infos">
      <div class="product-Ask__title">{{ product.title }}</div>
      <div class="product-Ask__price">
        {%- if product.compare_at_price > product.price -%}
          <del>{{ product.compare_at_price | money }}</del> <ins>{{ product.price | money }}</ins>
        {%- else -%}
          {{ product.price | money }}
        {%- endif -%}
      </div>
    </div>
  </div>

  {%- form 'contact', id: formId -%}
    {%- render 'form-status', form: form, form_id: formId -%}
    <h3 class="text-center">{{ 'products.product.ask_question' | t }}</h3>
    <p>
      <label for="{{ formId }}-name">{{ 'templates.contact.form.name' | t }}</label>
      <input
        type="text"
        id="{{ formId }}-name"
        name="contact[name]"
        required="required"
        value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}"
      >
    </p>
    <p>
      <label for="{{ formId }}-email">{{ 'templates.contact.form.email' | t }}</label>
      <input
        type="email"
        id="{{ formId }}-email"
        name="contact[email]"
        autocorrect="off"
        autocapitalize="off"
        value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
        aria-required="true"
        required="required"
        {%- if form.errors contains 'email' %}
          class="input--error" aria-invalid="true" aria-describedby="{{ formId }}-email-error"
        {%- endif -%}
      >
      {%- if form.errors contains 'email' -%}
        <span id="{{ formId}}-email-error" class="input-error-message"
          ><i class="facl facl-attention cr mr__5"></i>{{ form.errors.translated_fields.email | capitalize }}
          {{ form.errors.messages.email }}.</span
        >
      {%- endif -%}
    </p>

    <p id="ContactFormAsk__phone">
      <label for="{{ formId }}-phone">{{ 'templates.contact.form.phone' | t }}</label>
      <input
        type="tel"
        id="{{ formId }}-phone"
        name="contact[phone]"
        pattern="[0-9\-]*"
        value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}"
      >
    </p>

    <p class="d-none">
      <label for="{{ formId }}-product">Product</label>
      <textarea
        rows="20"
        id="{{ formId }}-product"
        name="contact[product]"
        required="required"
      >{{product.title}} - {{ request.origin }}{{product.url}}</textarea>
    </p>
    <p>
      <label for="{{ formId }}-message">{{ 'templates.contact.form.message' | t }}</label>
      <textarea
        rows="9"
        id="{{ formId }}-message"
        name="contact[body]"
        required="required"
      >{% if form.body %}{{ form.body }}{% endif %}</textarea>
    </p>
    <input type="submit" class="button w-100" value="{{ 'templates.contact.form.submit' | t }}">
  {%- endform -%}

{%- else -%}
  {{- page.content -}}
{%- endif -%}

[splitlz]

{% schema %}
{
  "name": "Ajax Popup",
  "settings": []
}
{% endschema %}
