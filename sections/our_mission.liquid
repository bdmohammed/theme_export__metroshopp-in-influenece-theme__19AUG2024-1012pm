<!-- sections/our_mission.liquid -->
{{ 'section.css' | asset_url | stylesheet_tag }}
{%- liquid
    assign sid = section.id
    assign se_stts = section.settings
    assign se_blocks = section.blocks
    assign stt_layout = se_stts.layout
    assign stt_image_bg = se_stts.image_bg
    if stt_layout == 'se-container' 
        assign html_layout = '<div class="container">__</div></div>' | split:'__'
    elsif stt_layout == 'container-wrap'
        assign html_layout = '<div class="container">__</div>' | split:'__'
    else
        assign html_layout = '__' | split:'__'
    endif
    assign se_class = 'nt_se_' |append:sid
    if se_stts.use_cus_css and se_stts.code_cus_css != blank
        render 'se_cus_css',code_cus_css:se_stts.code_cus_css,se_class:se_class
    endif 
-%}
<div class="section-inner {{se_class}} nt_se_{{sid}} {{stt_layout}}{% if stt_image_bg != blank and stt_layout != 'se-container' %} has-imgbg lazyload{% endif %}" {% if stt_image_bg != blank and stt_layout != 'se-container' %} data-bgset="{{ stt_image_bg | image_url: '1x1' }}" data-sizes="auto"  data-optimumx="1.5"{% endif %} {% render 'section_style',se_stts:se_stts -%} >
    {{-html_layout[0]-}}
        {%- if stt_layout == 'se-container' -%}
        <div class="container-inner{% if stt_image_bg != blank %} has-imgbg lazyload{% endif %}" {% if stt_image_bg != blank %} data-bgset="{{ stt_image_bg | image_url: '1x1' }}" data-sizes="auto"  data-optimumx="1.5"{% endif %}>{% endif -%}
            {%- render 'section_tophead',se_stts:se_stts -%}
            <div class="our-mission__list row ts-gx-md-{{se_stts.space_h_item}} ts-gy-md-{{se_stts.space_v_item}} ts-gx-{{se_stts.space_h_item_mb}} ts-gy-{{se_stts.space_v_item_mb}}">
                {%- for block in se_blocks -%}
                    {%- assign bk_stts = block.settings -%}
                    <div class="col-item col-md-{{bk_stts.col_tb}} col-{{bk_stts.col_mb}} text-{{bk_stts.text_align}}"> 
                        <h3>{{bk_stts.heading}}</h3>
                        <p>{{bk_stts.content}}</p>
                    </div>
                {%- endfor -%}
            </div>
    {{-html_layout[1]-}}
</div>
<style>
    .our-mission h3{margin-bottom:10px;font-size: 20px;}
    .our-mission p{margin:0px;}
</style>
