{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-prettier"
  ],
  "rules": {
    "selector-class-pattern": "^[a-z][a-z0-9\\-_]*$",
    "selector-id-pattern": "^[a-z][a-z0-9\\-_]*$",
    "color-no-invalid-hex": true,
    "block-no-empty": true,
    "unit-no-unknown": true,
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "-webkit-appearance",
          "-moz-appearance",
          "-ms-appearance",
          "-webkit-transform",
          "-moz-transform",
          "-ms-transform"
        ]
      }
    ],
    "selector-pseudo-element-no-unknown": [
      true,
      {
        "ignorePseudoElements": [
          "-webkit-input-placeholder",
          "-moz-placeholder",
          "-ms-input-placeholder"
        ]
      }
    ],
    "no-duplicate-selectors": true,
    "string-no-newline": true,
    "declaration-no-important": [
      true,
      {
        "severity": "warning"
      }
    ],
    "max-nesting-depth": 4,
    "selector-max-compound-selectors": 4,
    "selector-max-id": 1,
    "declaration-block-no-redundant-longhand-properties": true,
    "shorthand-property-no-redundant-values": true,
    "comment-no-empty": true,
    "at-rule-no-vendor-prefix": [
      true,
      {
        "ignoreAtRules": ["webkit-keyframes", "moz-keyframes"]
      }
    ],
    "media-feature-name-no-vendor-prefix": true,
    "property-no-vendor-prefix": [
      true,
      {
        "ignoreProperties": ["appearance", "transform", "transition", "animation"]
      }
    ],
    "selector-no-vendor-prefix": true,
    "value-no-vendor-prefix": true
  },
  "reporters": [
    {
      "formatter": "stylelint-html-reporter",
      "saveReportTo": "reports/css-lint-report.html",
      "reportTitle": "CSS Lint Report"
    }
  ],
  "ignoreFiles": [
    "node_modules/**/*",
    "assets/*.min.css",
    "reports/**/*"
  ]
}