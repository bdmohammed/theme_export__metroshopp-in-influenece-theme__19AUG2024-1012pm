<!doctype html>
{%- liquid
  if settings.use_rtl == '1'
    assign isRTL = true
  elsif settings.use_rtl == '2' and settings.list_rtl contains request.locale.iso_code
    assign isRTL = true
  else
    assign isRTL = false
  endif
  assign body_img = settings.body_bg_image
  if body_img != blank and settings.general_layout == 'boxed'
    assign class_lazy = 'lazyload'
  endif
-%}
<html
  class="p-theme wrapper__{{settings.general_layout}} rtl_{{isRTL}} swatch_color_style_{{settings.swatch_color_style}} pr_border_style_{{settings.pr_border_style}} pr_img_effect_{{settings.pr_img_effect}} enable_eff_img1_{{settings.enable_eff_img1}} badge_shape_{{settings.badge_shape}} css_for_wis_app_{{settings.enable_css_wis}} {% if settings.use_cus_lz and settings.cus_lz %} lzcus-true{% endif %} shadow_round_img_{{settings.enable_shadow_round_img}} header__{{settings.header_design}} is-remove-unavai-{{settings.variant_remove}} compare_{{settings.enable_compe}} cart-count-{{ cart.item_count }} pr-ellipsis-{{ settings.enable_text_ellipsis }} no-js"
  lang="{{ request.locale.iso_code }}"
  {% if isRTL %}
    dir="rtl"
  {% endif %}
>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, height=device-height, minimum-scale=1.0, maximum-scale=1.0"
    >
    <meta name="theme-color" content="#fff">
    {%- if canonical_url != blank -%}
      <link rel="canonical" href="{{ canonical_url }}">
    {%- endif -%}
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    {%- if settings.favicon != blank -%}
      <link
        rel="shortcut icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}"
      >
    {%- endif -%}
    {%- if settings.favicon_apple != blank -%}
      <link
        rel="apple-touch-icon-precomposed"
        type="image/png"
        sizes="152x152"
        href="{{ settings.favicon_apple | image_url: width: 152, height: 152 }}"
      >
    {%- endif -%}

    {%- if settings.font_source == '1'
      and settings.fnt_fm_sp1.system? == false
      or settings.fnt_fm_sp2.system? == false
      or settings.fnt_fm_sp3.system? == false
    -%}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endif -%}

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
      defer
    ></script>

    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Poppins:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i|Libre+Baskerville:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i&display=swap"
      media="print"
      onload="this.media='all'"
    >

    <script type="text/javascript" src="{{ 'lazysizes.js' | asset_url }}" async="async"></script>
    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>

    {%- if tinyscript -%}
      {{ content_for_header }}
    {%- else -%}
      {% render 'tiny-script-control' %}
    {%- endif -%}
    <script>
      console.log('{{ settings | json }}');
    </script>
    {%- if settings.body_font and settings.body_font != blank and settings.body_font.system? == false -%}
      <link
        rel="preload"
        as="font"
        href="{{ settings.body_font | font_url }}"
        type="font/woff2"
        crossorigin
      >
    {%- endif -%}
    {%- if settings.headings_font and settings.headings_font != blank and settings.headings_font.system? == false -%}
      <link rel="preload" as="font" href="{{ settings.headings_font | font_url }}" type="font/woff2" crossorigin>
    {%- endif -%}

    {%- liquid
      render 'seo-title'
      render 'social-meta'
      render 'fonts'
      render 'head_assets', t_name: request.page_type, isRTL: isRTL
      render 'tag-manager'
    -%}

    {% comment %} {% render 'judgeme_core' %} {% endcomment %}
    {{ shop.metafields.loox.global_html_head }}
  </head>
  <body
    class="template-{{ request.page_type | handle }} {{class_lazy}}"
    {% if body_img != blank %}
      data-bgset="{{ body_img | image_url: '1x1' }}" data-optimumx="1.5" data-sizes="auto"
    {% endif -%}
  >
    <a class="skip-to-content-link visually-hidden" href="#MainContent">{{ 'accessibility.skip_to_text' | t }}</a>
    <div class="close-overlay opacity-0"></div>

    <div class="website-wrapper">
      {%- render 'header', t_name: request.page_type -%}

      <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
        <div class="globoRecommendationsTop"></div>
        {{ content_for_layout }}
        <div class="globoRecommendationsBottom"></div>
      </main>

      {%- liquid
        echo '<footer id="footer">'
        section 'footer'
        section 'bottom-bar'
        echo '</footer>'
      -%}
    </div>

    <ul hidden class="d-none">
      <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
    </ul>
    {%- liquid
      render 'render_bottom'
    -%}

    {{ shop.metafields.loox.global_html_body }}
  </body>
</html>
