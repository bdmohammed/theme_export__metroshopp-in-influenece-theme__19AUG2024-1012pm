{%- liquid
  assign image = product.images[0] | default: placeholder_img
-%}
<div class="row space-item-inner widget__pr">
  <div class="col-item col widget_img_pr">
    {%- if image != blank -%}
      <a
        class="d-block relative overflow-hidden ratio"
        href="{{pr_url}}"
        style="{{imgatt}}--aspect-ratioapt: {{image.aspect_ratio | default: 1}}"
      >
        <img
          class="lazyload"
          data-src="{{ image | image_url: '1x1' }}"
          data-widths="[100,200,400,600,700,800,900,1000,1200,1400,1600]"
          data-optimumx="2"
          data-sizes="auto"
          src="{% render 'img_svg',w:image.width,h:image.height %}"
          width="{{ image.width }}"
          height="{{ image.height }}"
          alt="{{ image.alt | escape }}"
        >
        <span
          class="lazyload-loader is-bg-img"
          style="background: url({{ image | image_url: '1x1' }});"
        ></span>
      </a>
    {%- endif -%}
  </div>
  <div class="col-item col widget_if_pr">
    <a href="{{pr_url}}" class="d-block widget__pr-title">{{ product.title }}</a>
    {%- render 'product-price',
      class_price: 'widget__pr-price',
      product: product,
      price_varies_style: price_varies_style,
      type: 'card',
      isGrouped: false
    -%}
  </div>
</div>
