{%- assign image = post.image -%}
<article class="col-item post post-item post-des-1">
	<div class="post-inner">
		{%- if image != blank -%}
			<div class="post-thumb">
				<a class="eff eff-{{b_effect}} eff-img-{{img_effect}} d-block" href="{{post.url}}">
					<div class="ratio" style="background: url({{image | image_url: '1x1'}});--aspect-ratioapt: {{image.aspect_ratio | default: 2}}"  data-cacl-slide>
						<img class="lazyload lz--fadeIn obj-eff" data-src="{{ image | image_url: '1x1' }}" data-widths="[100,200,400,600,700,800,900,1000,1200,1400,1600]" data-optimumx="2" data-sizes="auto" src=" {%- render 'img_svg',w:image.width,h:image.height -%} " width="{{ image.width }}" height="{{ image.height }}" alt="{{ image.alt | escape }}">
					</div>
				</a>
				{%- if show_cate -%}
					{%- assign post_tags = post.tags | join:';' | split:';' -%}
					{%- assign tag_category = post_tags | where:'category_' | first -%}
					<div class="categories">
						{%- if tag_category != blank -%} 
							<a href="{{ blog_url }}/tagged/{{ tag_category | handle }}" class="post-text-color">{{ tag_category | remove :'category_' | strip }}</a> 
						{%- else -%}
							<a href="{{ blog_url }}" class="post-text-color">{{blog.title}}</a> 
						{%- endif -%}
					</div> 
				{%- endif -%}
			</div>
		{%- endif -%}
		<div class="post-info">
			{% if show_tags %}
				<div class="tags">
					{%- for tag in post.tags limit:3 -%} 
			            <a href="{{ blog_url }}/tagged/{{ tag | handle }}" class="post-text-color">{{ tag  | remove :'category_' | strip  }}</a> {%- unless forloop.last -%} ,  {% endunless -%}
			        {%- endfor -%} 
				</div>
			{% endif %}
			<h3 class="post-title"><a href="{{post.url}}" class="post-text-color">{{post.title}}</a></h3>
			<div class="post-metas">
	            {% if show_au %}
		            <span class="post-author">{{by_txt}}
		              <span class="author-name">{{ post.author | replace_first: 'ad clnt', 'admin' }}</span>
		            </span>
		        {% endif %}
		        {% if show_dt %}
		            <span class="post-time"> {{on_txt}}
		            	<span> 
			            	{%- if date contains "%" -%}
			            		{{ post.published_at | time_tag: date }}
			            	{%- else -%}	
			            	{{ post.published_at | time_tag: format: date }}
			            	{%- endif -%}
		            	</span>
			        </span>
		        {% endif %}
		        {% if show_cm %}
		        	<span class="post-comment"> {{ 'blogs.comments.with_count_html' | t: count: post.comments_count }}</span>
		        {% endif %}
		    </div>
		</div>
		{% if show_cnt %}
			<div class="post-content">{%- if post.excerpt.size > 0  -%}{{ post.excerpt }}{%- else -%}{{ post.content | strip_html | truncate: 118 }}{%- endif -%}</div>
		{% endif %}
		{% if show_rm %}
			<a href="{{post.url}}" class="post-readmore">{{ readmore_txt }} 
              {% if show_irm %}<svg width="24" height="24" viewBox="0 0 24 24" fill="transparent" xmlns="http://www.w3.org/2000/svg">
				<path d="M1 12H15" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
				<path d="M12 8L16 12L12 16" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
              {% endif %}
			</a>
		{% endif %}
	</div>
</article>