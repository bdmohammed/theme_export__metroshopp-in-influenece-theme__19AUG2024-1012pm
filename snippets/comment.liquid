{%- assign gavatar = comment.email | remove: ' ' | strip_newlines | downcase | md5 -%}
<div class="row align-items-center ts-gx-20">
	<div class="col-item col-auto col_avatar_cm relative"><img alt="avatar" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="https://www.gravatar.com/avatar/{{ gavatar }}?s=80&d=mm&r=g" data-srcset="https://www.gravatar.com/avatar/{{ gavatar }}?s=160&d=mm&r=g 2x" class="lazyload comment__avatar"><span class="lazyload-loader"></span></div>
	<div class="col-item col">
		<h5 class="comment__author">{{ comment.author }}</h5>
		<div class="comment__content">{{ comment.content }}</div>
		<div class="comment__date fnt-fm-3">{{ comment.created_at | date: '%B %e, %Y at %R%P' }}</div>
	</div>
</div>