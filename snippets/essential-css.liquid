{% comment %}
  {% style %}
    {{ settings.body_font | font_face: font_display: 'swap' }}
    {{ settings.headings_font | font_face: font_display: 'swap' }}

    *,
    *::before,
    *::after {
      box-sizing: inherit;
    }

    html {
      box-sizing: border-box;
      height: 100%;
    }

    body {
      display: grid;
      grid-template-rows: auto auto 1fr auto;
      grid-template-columns: 100%;
      min-height: 100%;
      margin: 0;
    }

    details > summary::-webkit-details-marker {
      display: none;
    }

    :root {

          /* CSS Variables */
         --wrapper-mw      : 1420px;
         --font-family-1   : Poppins;
         --font-family-2   : Poppins;
         --font-family-3   : Libre Baskerville;
         --font-body-family   : Poppins;
         --font-heading-family: Poppins;


         --ts-success-color       : #428445;
         --ts-success-color-rgb   : 66, 132, 69;
         --ts-warning-color       : #e0b252;
         --ts-warning-color-rgb   : 224, 178, 82;
         --ts-error-color         : #EB001B;
         --ts-error-color-rgb     : 235, 0, 27;
         --ts-light-color         : #ffffff;
         --ts-dark-color          : #222222;
         --ts-highlight-color     : #ec0101;
         --ts-tooltip-background  : #383838;
         --ts-tooltip-color       : #fff;
         --primary-sw-color        : #333;
         --primary-sw-color-rgb    : 51, 51, 51;
         --border-sw-color         : #ddd;
         --secondary-sw-color      : #878787;
         --primary-price-color     : #ec0101;
         --secondary-price-color   : #878787;

         --ts-body-background     : #fff;
         --text-color              : #878787;
         --text-color-rgb          : 135, 135, 135;
         --heading-color           : #222222;
         --accent-color            : #56cfe1;
         --accent-color-rgb        : 86, 207, 225;
         --accent-color-darken     : #23b2c7;
         --accent-color-hover      : var(--accent-color-darken);
         --secondary-color         : #222;
         --secondary-color-rgb     : 34, 34, 34;
         --link-color              : #878787;
         --link-color-hover        : #56cfe1;
         --border-color            : #ddd;
         --border-color-rgb        : 221, 221, 221;
         --border-primary-color    : #333;
         --button-background       : #222;
         --button-color            : #fff;
         --button-background-hover : #56cfe1;
         --button-color-hover      : #fff;

         --sale-badge-background    : #ff4e00;
         --sale-badge-color         : #fff;
         --new-badge-background     : #109533;
         --new-badge-color          : #fff;
         --preorder-badge-background: #0774d7;
         --preorder-badge-color     : #fff;
         --soldout-badge-background : #999999;
         --soldout-badge-color      : #fff;
         --custom-badge-background  : #00A500;
         --custom-badge-color       : #fff;/* Shopify related variables */
         --payment-terms-background-color: ;

         --lz-background: #f5f5f5;
         --lz-img: url("{{ 'loader_sky_blue.svg' | asset_url }}");
        }

     html {
       font-size: 62.5%;
       height: 100%;
     }

     body {
       margin: 0;
       overflow-x: hidden;
       font-size:14px;
       letter-spacing: 0px;
       color: var(--text-color);
       font-family: var(--font-body-family);
       line-height: 1.7;
       font-weight: 400;
       -webkit-font-smoothing: auto;
       -moz-osx-font-smoothing: auto;
     }


     h1, h2, h3, h4, h5, h6, .as_title {
       color: var(--heading-color);
       font-family: var(--font-heading-family);
       line-height: 1.4;
       font-weight: 600;
       letter-spacing: 0px;
     }
     h1 { font-size: 37px }
     h2 { font-size: 29px }
     h3 { font-size: 23px }
     h4 { font-size: 18px }
     h5 { font-size: 17px }
     h6 { font-size: 15.5px }
     a,.as_link {
       /* font-family: var(--font-link-family); */
       color: var(--link-color);
     }
     a:hover,.as_link:hover {
       color: var(--link-color-hover);
     }
     button,
     input,
     optgroup,
     select,
     textarea {
       border-color: var(--border-color);
     }
     .as_button,
     button,
     input[type="button"]:not(.btn),
     input[type="reset"],
     input[type="submit"]:not(.btn) {
       font-family: var(--font-button-family);
       color: var(--button-color);
       background-color: var(--button-background);
       border-color: var(--button-background);
     }
     .as_button:hover,
     button:hover,
     input[type="button"]:not(.btn):hover,
     input[type="reset"]:hover,
     input[type="submit"]:not(.btn):hover  {
       color: var(--button-color-hover);
       background-color: var(--button-background-hover);
       border-color: var(--button-background-hover);
     }

     .cp,.color-accent { color : var(--accent-color) }.ct,.color-text { color : var(--text-color) }.ch,.s-color-heading { color : var(--heading-color) }.csecondary { color : var(--secondary-color) }

     .fnt-fm-1 {
       font-family: var(--font-family-1) !important;
     }
     .fnt-fm-2 {
       font-family: var(--font-family-2) !important;
     }
     .fnt-fm-3 {
       font-family: var(--font-family-3) !important;
     }
     .cr {
         color: var(--ts-highlight-color);
     }
     .price__sale { color: var(--primary-price-color); }.fix-overflow.row { max-width: 100vw;margin-left: auto;margin-right: auto;}.lazyloadopt {opacity: 1 !important;transition: opacity 0s, transform 1s !important;}.d-block {display: block;}.d-none {display: none;}@media (min-width: 768px) {.d-md-block {display: block;}.d-md-none {display: none; }}@media (min-width: 1025px) {.d-lg-block {display: block;}.d-lg-none {display: none; }}
  {% endstyle %}
{% endcomment %}
